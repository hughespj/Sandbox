<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/collection_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/song_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        android:layout_below="@+id/song_collection"
        android:layout_alignStart="@+id/song_collection"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/collection_image"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/collection_image"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/song_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        android:layout_below="@+id/song_artist"
        android:layout_alignStart="@+id/song_artist"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/lyric_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:layout_below="@+id/song_track"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp" />
</RelativeLayout>