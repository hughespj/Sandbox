<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_deep_purple_A100">

    <ImageView
        android:id="@+id/collection_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/song_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/song_collection"
        android:layout_below="@+id/song_collection"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/collection_image"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/collection_image"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/song_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/song_artist"
        android:layout_below="@+id/song_artist"
        android:text="TextView"
        android:textSize="24sp" />


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/material_drawer_background">

        <TextView
            android:id="@+id/lyric_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/song_track"
            android:layout_marginStart="6dp"
            android:paddingVertical="50dp"
            android:text="Lyrics" />
    </ScrollView>
</RelativeLayout>